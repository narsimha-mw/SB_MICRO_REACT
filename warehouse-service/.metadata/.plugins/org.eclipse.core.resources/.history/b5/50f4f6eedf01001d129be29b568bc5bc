package com.retailer.warehouse.controller;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.retailer.warehouses.model.Warehouses;
import com.retailer.warehouses.services.WarehousesService;

@RestController
@RequestMapping("/departments")
public class WarehousesController {
	
	@Autowired
	private WarehousesService warehousesService;
	
	@PostMapping("/save")
	public Warehouses save(@RequestBody Warehouses departments) {
	return warehousesService.save(departments);		
	}
	@GetMapping("/test")
	public String test() {
	return "working fine has expeted..good";
	}
}
